<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ticket_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:paddingBottom="7dp"
        android:text=""
        android:textColor="@color/my_purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nam Định - Hà Nội" />

    <TextView
        android:id="@+id/number_plate_tv"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/ticket_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/ticket_name_tv"
        tools:text="Xe: 29B-0536" />

    <TextView
        android:id="@+id/seats_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/number_plate_tv"
        app:layout_constraintEnd_toStartOf="@+id/travel_date_tv"
        app:layout_constraintStart_toEndOf="@+id/number_plate_tv"
        tools:text="Ghế: 5" />

    <TextView
        android:id="@+id/ticket_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/ticket_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="00000001" />

    <TextView
        android:id="@+id/travel_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/number_plate_tv"
        app:layout_constraintEnd_toEndOf="@+id/ticket_id_tv"
        tools:text="19/07/2022" />

    <TextView
        android:id="@+id/ticket_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/ticket_id_tv"
        app:layout_constraintTop_toBottomOf="@+id/travel_date_tv"
        tools:text="0,00" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/ticket_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/number_plate_tv">

        <com.google.android.material.chip.Chip
            android:id="@+id/first_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange_surface"
            android:textColor="@color/orange_on_surface"
            tools:text="Ghi chú" />

        <com.google.android.material.chip.Chip
            android:id="@+id/second_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange_surface"
            android:textColor="@color/orange_on_surface"
            tools:text="Chờ CQT cấp mã" />
    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>