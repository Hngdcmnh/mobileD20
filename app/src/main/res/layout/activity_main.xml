<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#4a0ec2"
        android:gravity="center">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/bg_edit"
            android:gravity="center"
            android:hint="Nhập Tên vé, số vé, mã tra cứu" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/search"
            app:tint="#A39494" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="70dp"
            android:text="Tổng số lượng vé"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="95dp"
            android:text="111,00"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginStart="340dp"
            android:layout_marginTop="70dp"
            android:text="Tổng tiền"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="310dp"
            android:layout_marginTop="95dp"
            android:text="10.740.000,00"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="Nam Định - Hà Nội"
            android:textColor="#4a0ec2" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="35dp"
            android:text="Xe: 29B-0536" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="35dp"
            android:text="Ghế: 5" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="35dp"
            android:text="19/07/2022" />
    </RelativeLayout>
</LinearLayout>