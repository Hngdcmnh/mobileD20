<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/purple_700"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vé đã xuất"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ic_search_fill0_wght400_grad0_opsz48"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:scaleType="center"
            android:layout_marginLeft="145dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:scaleType="center"
            android:background="@drawable/ic_filter_alt_fill0_wght400_grad0_opsz48"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700">

        <TextView
            android:id="@+id/sumticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng số vé"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:paddingLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Tổng số tiền"
            android:textColor="@color/white"
            android:paddingRight="5dp"
            android:textSize="18dp" />

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:paddingLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="0"
            android:textColor="@color/white"
            android:paddingRight="5dp"
            android:textSize="18dp" />

    </FrameLayout>
    <include
        layout="@layout/item"/>


</LinearLayout>